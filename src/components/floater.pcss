@import 'css-variables/breakpoints/generic.pcss';
@import './variables.pcss';

.dom-floater-base {
  z-index: 1000;
  box-sizing: border-box;  

  &.MODAL {
    position: fixed;
    left: 50%;
    top: 50%; 
    transform: translateX(-50%) translateY(-50%);

    &.MASK {      
    }
  }

  &.TOAST {
    position: relative;

  }

  &.POPUP {
    position: fixed;
  }
}