@import 'css-variables/breakpoints/generic.pcss';
@import './variables.pcss';

.dom-floater-base {
  z-index: 1000;
  transition: all 300ms ease;
  box-sizing: border-box;
  border: 1px solid;  
  backface-visibility: hidden;
  transform: translate(0%, 0%);

  &.MODAL {
    position: fixed;    
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  &.TOAST {
    position: relative;
  }

  &.POPUP {
    position: fixed;
  }
}